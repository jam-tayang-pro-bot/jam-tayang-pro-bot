# Jam Tayang Pro Bot Configuration
# Copy file ini ke .env dan isi dengan nilai yang sesuai

# WAJIB: Bot Token dari @BotFather di Telegram
BOT_TOKEN=your_bot_token_here

# Database Configuration (Opsional - default SQLite)
DATABASE_URL=sqlite:///jam_tayang_pro.db

# Admin Configuration (Opsional)
# Telegram User ID admin, pisahkan dengan koma jika lebih dari satu
ADMIN_USER_IDS=123456789,987654321

# Redis Configuration (Opsional - untuk caching)
REDIS_URL=redis://localhost:6379

# Webhook Configuration (Opsional - untuk production)
WEBHOOK_URL=https://yourdomain.com/webhook
WEBHOOK_PORT=8443

# API Keys (Opsional - untuk integrasi eksternal)
YOUTUBE_API_KEY=your_youtube_api_key
INSTAGRAM_API_KEY=your_instagram_api_key

# Bot Settings
MAX_ORDERS_PER_USER=10
MAX_TOKENS_PER_AD=5
DAILY_AD_LIMIT=20

# Logging Level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Development Mode (true/false)
DEBUG_MODE=false
